<div class="header">
    <h2 class="title">Albums</h2>
</div>
<div class="container">
    <div class="row">
            {{#each myAlbums}}
            <div class="col-md-4 album">
                <div class="album-image-container">
                    <img src="{{this.images.0.url}}" height="200" class="album-image" alt="no-image">
                </div>
                <div class="album-info">
                    <p class="album-title">{{this.name}}</p>
                    <a href="/tracks/{{this.id}}">View Tracks</a>
                </div>
            </div>
            {{/each}}
    </div>
</div>